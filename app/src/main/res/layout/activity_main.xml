<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_above="@id/adViewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.design.widget.BottomNavigationView
        android:layout_alignParentBottom="true"
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Widget.BottomNavigationView"
        app:menu="@menu/bottom_navigation"
        android:background="#222325"
        app:itemIconTint="@color/bnv_tab_item_foreground"
        app:itemTextColor="@color/bnv_tab_item_foreground"
        android:fitsSystemWindows="true"/>

    <LinearLayout
        android:id="@+id/adViewLayout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_player">
        <!-- TODO: Sample Banner ca-app-pub-3940256099942544/6300978111 -->
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/adViewLayout_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <com.google.android.gms.ads.AdView
            android:visibility="gone"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-1164424526503510/4743714503">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:layout_above="@id/navigation"
        android:id="@+id/bottom_player"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <LinearLayout
            android:background="@color/bottom_nav"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="53dp">
            <ProgressBar
                android:id="@+id/songLayoutProgress"
                android:visibility="gone"
                android:background="@color/bottom_nav"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:indeterminateDrawable="@drawable/progress"/>

            <android.support.constraint.ConstraintLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="49dp">
                <ProgressBar
                    android:padding="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="5dp"
                    android:id="@+id/song_progress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminateDrawable="@drawable/progress"/>
                <ImageButton
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/song_progress"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/action_maximize"
                    android:layout_marginStart="10dp"
                    android:background="@color/bottom_nav"
                    app:srcCompat="@drawable/ic_arrow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ImageButton
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/song_progress"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/action_play"
                    android:layout_alignParentEnd="true"
                    android:background="@color/bottom_nav"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_pause_circle"
                    android:layout_width="30dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toStartOf="@id/action_play"
                    app:layout_constraintStart_toEndOf="@id/action_maximize"
                    android:id="@+id/swipeLayout"
                    android:layout_toEndOf="@id/action_maximize"
                    android:orientation="horizontal"
                    android:layout_alignEnd="@id/action_play"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:visibility="gone"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/dmsans_font"
                        android:gravity="center_vertical"
                        android:id="@+id/action_title"
                        android:layout_marginStart="15dp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                    <TextView
                        android:visibility="gone"
                        android:fontFamily="@font/dmsans_font"
                        android:gravity="center_vertical"
                        android:id="@+id/action_channelTitle"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:layout_marginEnd="56dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </android.support.constraint.ConstraintLayout>

            <View
                android:background="@color/colorScreen"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>