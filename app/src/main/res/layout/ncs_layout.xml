<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ncslayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="wrap_content">

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorScreen"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/futura_bold"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        android:layout_width="wrap_content"
        android:text="NCS Playlists"
        android:layout_height="wrap_content" />

    <HorizontalScrollView
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">



            <LinearLayout
                android:id="@+id/popitem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <include layout="@layout/ncs_item1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/futura_bold"
                    android:text="NCS Relases"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/futura_medium"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Music released by NCS"
                    android:textColor="@color/dark_white"
                    android:textSize="13sp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/popitem5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <include layout="@layout/ncs_item2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/futura_bold"
                    android:text="NCS Gaming Music"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/futura_medium"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="Top most popular NCS Gaming Musics"
                    android:textColor="@color/dark_white"
                    android:textSize="13sp" />
            </LinearLayout>







            <LinearLayout
                android:id="@+id/popitem6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <include layout="@layout/ncs_item3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-3dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/futura_bold"
                    android:text="Top 50"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/futura_medium"
                    android:lines="2"
                    android:maxLines="2"
                    android:text="NCS Top 50 Song"
                    android:textColor="@color/dark_white"
                    android:textSize="13sp" />
            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>