<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="7dp"
    android:id="@+id/equalizer_layout"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark">
    <TextView
        android:rotation="90"
        android:textColor="@color/white"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="-15dp"
        android:id="@+id/txt_lowerBandLevel"
        android:padding="15dp"
        android:text="-15 dB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.warkiz.widget.IndicatorSeekBar
        app:isb_thumb_color="@color/colorAccent"
        app:isb_track_progress_color="@color/colorAccent"
        app:isb_show_thumb_text="false"
        app:isb_seek_smoothly="true"
        app:isb_show_indicator="none"
        app:isb_show_tick_texts="false"
        android:id="@+id/seekBar"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:rotation="90"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="-15dp"
        android:id="@+id/txt_frequencyBand"
        android:padding="15dp"
        android:textSize="12sp"
        android:text="910 Hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:rotation="90"
        android:textColor="@color/white"
        android:layout_marginStart="-15dp"
        android:layout_marginEnd="-15dp"
        android:id="@+id/txt_upperBandLevel"
        android:padding="15dp"
        android:text="15 dB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>